<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap used for dashboard template -->
    <link href="/public/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/public/bootstrap/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Pacifico|Sanchez">
    <link href='/public/stylesheets/signin.css' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class='container transparent'>
	    <div class="jumbotron">
	        <h1><%= title %></h1>
	        <p class="lead">Uniting the world through language.</p>
	     </div>
	    <% if(messages) { %>
	    	<% messages.forEach(function(warning) { %>
	    		<div class='warning'>
	    			<h4 class='bg-danger text-center warning'> <%= warning %> </h4>
	    		</div>
	    	<% }) %>
	    <% } %>
	    <!-- <div class='page'> -->
	    	<div class="row marketing">
	        <div class='col-lg-6'>
	        	<form class="form-signin" action='login' method='post' role="form">
			        <h2 class="form-signin-heading">Please sign in</h2>
			        <label for="username" class="sr-only">username</label>
			        <input type="input" name="username" class="form-control " placeholder="username" required autofocus>
			        <label for="password" class="sr-only">password</label>
			        <input type="password" name="password" class="form-control " placeholder="password" required>
			        <button class="btn btn-lg btn-success btn-block" type="submit">Sign in</button>
		      	</form>
	        </div>
	        <div class='col-lg-6'>
	        	<form class="form-signin" action='/users/create' method='post' role='form'>
	        		<h2 class="form-signin-heading">Create new user</h2>
	        		<label for="username" class="sr-only">username</label>
	        		<input type="input" name="username" class="form-control" placeholder="username" required>
			        <label for="password" class="sr-only">password</label>
			        <input type="password" name="password" class="form-control " placeholder="password" required>
			        <h3><small> proficient languages</small></h3>
			        <div class="dropdown">
						    <select multiple name='languages' class="form-control ">
						    <% for(var i=0; i<languages.length; i++) { %>
								  <option><%=languages[i]%></option>
						    <% } %>
								</select>
							</div>
							<h3><small> languages interested in </small></h3>
			        <div data-toggle="popover" data-content="These languages help us match other people to you when they are searching for an exchange. You'll be able to start an exchange in any language in which you are not proficient." id='desires'  class="dropdown">
						    <select multiple name='interests' class="form-control ">
						    <% for(var i=0; i<languages.length; i++) { %>
								  <option><%=languages[i]%></option>
						    <% } %>
								</select>
							</div>
						<br>
						<div>
			        <button class="btn btn-lg btn-success btn-block" type="submit">Create New</button>
			      </div>
			     </form>
	        </div>
	        <div class="tooltip top" role="tooltip">
					  <div class="tooltip-arrow"></div>
					  <div class="tooltip-inner">
					    Some tooltip text!
					  </div>
					</div>
	      </div>
	    </div>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/public/bootstrap/js/bootstrap.min.js"></script>
    <script src="/public/javascripts/login.js"></script>
  </body>
</html>